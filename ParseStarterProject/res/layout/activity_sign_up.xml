<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.SignUpActivity"
    android:id="@+id/signup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/textPerson_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textPassword_editText2"
        android:layout_below="@+id/textPerson_editText"
        android:layout_alignRight="@+id/textPerson_editText"
        android:layout_alignEnd="@+id/textPerson_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textPassword_editText3"
        android:layout_below="@+id/textPassword_editText2"
        android:layout_alignRight="@+id/textPassword_editText2"
        android:layout_alignEnd="@+id/textPassword_editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_editText"
        android:layout_below="@+id/textPassword_editText3"
        android:layout_alignRight="@+id/password_confirmation"
        android:layout_alignEnd="@+id/password_confirmation"
        android:text="email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_editText"
        android:layout_below="@+id/email_editText"
        android:layout_alignRight="@+id/password_confirmation"
        android:layout_alignEnd="@+id/password_confirmation"
        android:text="phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton_editText"
        android:layout_below="@+id/phone_editText"
        android:layout_alignRight="@+id/email_editText"
        android:layout_alignEnd="@+id/email_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/password_confirmation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
